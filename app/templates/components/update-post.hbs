{{#if postUpdate}}
  <h3>Edit Post (rendered by component update-post.hbs)</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Your name</label>
        {{input value=author id="author" placeholder=post.author}}
      </div>

      <div class="form-group">
        <label for="title">Name your blogpost</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>

      <div class="form-group">
        <label for="image">Add an image of yourself by URL</label>
        {{input value=image id="image" placeholder=post.image}}
      </div>

      <div class="form-group">
        <label for="content">Write post here</label>
        {{input value=content id="content" placeholder=post.content}}
      </div>

      <button {{action 'update' post}}>Update</button>
    </form>
  </div>
{{else}}
  <button {{action 'updatePost'}}>Update this post</button>
{{/if}}
